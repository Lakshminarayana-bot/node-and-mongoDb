<% layout('layouts/boilerplate') %>
    <h1>ALL CAMPGROUNDS</h1>
    <div><a href="/campgrounds/new">add campground</a></div>
    <ul>
        <% for(let campground of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">

                    <img src="<%=campground.image %>" class="col-md-4 image-fluid" alt="">

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=campground.title %>
                            </h5>
                            <p class="card-text">
                                <%=campground.description  %>
                            </p>
                            <p class="card-text">
                                <small class="text-muted"> <%=campground.location %>
                               </small>
                            </p>
                            <a href="/campgrounds/<%=campground._id %> " class="btn btn-primary">view <%=campground.title %> </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>